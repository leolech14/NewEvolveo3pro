# NewEvolveo3pro Environment Configuration
# Copy to .env and add your actual credentials

# AWS Configuration (for Textract)
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_DEFAULT_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name-here

# Azure Configuration (for Document Intelligence)
AZURE_FORM_RECOGNIZER_ENDPOINT=https://your-region.cognitiveservices.azure.com/
AZURE_FORM_RECOGNIZER_KEY=your_azure_key_here

# GitHub Configuration (for Auto-Golden Bot)
BOT_PAT=your_github_personal_access_token_here

# Pipeline Configuration
CONFIDENCE_THRESHOLD=0.90
DEFAULT_EXTRACTORS=pdfplumber,textract
RACE_MODE=true

# Cost Controls
MAX_DAILY_OCR_COST_USD=50.00
MAX_PAGES_PER_JOB=100

# Monitoring
PROMETHEUS_PORT=8000
GRAFANA_ENABLED=true

# Grafana Credentials (change these!)
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin123

# Development
DEBUG=false
LOG_LEVEL=INFO
ENABLE_PROFILING=false

# Add your credentials above and remove this reminder line
SETUP_REMINDER=Please_add_your_actual_credentials_above
